import streamlit as st
from keras.models import load_model
from PIL import Image, ImageOps
import numpy as np

# ëª¨ë¸ & ë¼ë²¨ ë¶ˆëŸ¬ì˜¤ê¸°
@st.cache_resource
def load_keras_model():
    model = load_model("keras_Model.h5", compile=False)
    class_names = open("labels.txt", "r").readlines()
    return model, class_names

model, class_names = load_keras_model()

# UI
st.title("ğŸ¨ ìƒ‰ìƒ ë¶„ë¥˜ ë”¥ëŸ¬ë‹ ì˜ˆì¸¡ê¸°")
st.write("ì´ë¯¸ì§€ë¥¼ ì—…ë¡œë“œí•˜ë©´ ë”¥ëŸ¬ë‹ ëª¨ë¸ì´ ìƒ‰ì„ ë¶„ë¥˜í•´ì¤˜ìš”!")

uploaded_file = st.file_uploader("ì´ë¯¸ì§€ë¥¼ ì—…ë¡œë“œí•˜ì„¸ìš”", type=["jpg", "jpeg", "png"])

if uploaded_file is not None:
    # ì´ë¯¸ì§€ í‘œì‹œ
    image = Image.open(uploaded_file).convert("RGB")
    st.image(image, caption="ì—…ë¡œë“œí•œ ì´ë¯¸ì§€", use_column_width=True)

    # ì´ë¯¸ì§€ ì „ì²˜ë¦¬
    size = (224, 224)
    image_resized = ImageOps.fit(image, size, Image.Resampling.LANCZOS)
    image_array = np.asarray(image_resized)
    normalized_image_array = (image_array.astype(np.float32) / 127.5) - 1
    data = np.ndarray(shape=(1, 224, 224, 3), dtype=np.float32)
    data[0] = normalized_image_array

    # ì˜ˆì¸¡
    prediction = model.predict(data)
    index = np.argmax(prediction)
    class_name = class_names[index].strip()
    confidence_score = prediction[0][index]

    # ì¶œë ¥
    st.success(f"ğŸ¯ ì˜ˆì¸¡ ìƒ‰ìƒ: **{class_name}**")
    st.write(f"ğŸ” ì‹ ë¢°ë„: `{confidence_score:.2%}`")
